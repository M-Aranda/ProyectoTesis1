<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnEscanear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="18dp"
        android:text="@string/escanear"
        app:layout_constraintBottom_toTopOf="@+id/ocr_image"
        app:layout_constraintStart_toStartOf="@+id/ocr_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ocr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="346dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ocr_image" />

    <ImageView
        android:id="@+id/ocr_image"
        android:layout_width="186dp"
        android:layout_height="0dp"
        android:layout_marginStart="99dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toTopOf="@+id/ocr_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEscanear"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
</androidx.constraintlayout.widget.ConstraintLayout>